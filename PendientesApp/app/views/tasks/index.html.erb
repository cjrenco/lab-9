<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5>Mis Pendientes</h5>
        </div>
        <div class="card-body">
          <!-- Formulario para aÃ±adir una nueva tarea -->
          <%= form_with model: Task.new, url: tasks_path, local: true do |form| %>
            <div class="input-group mb-3">
              <%= form.text_field :title, class: "form-control", placeholder: "Nuevo Pendiente" %>
              <div class="input-group-append">
                <%= form.submit "Agregar", class: "btn btn-outline-primary" %>
              </div>
            </div>
          <% end %>

          <!-- Lista de tareas pendientes -->
          <h6 class="mb-3">Tareas Pendientes</h6>
          <ul class="list-group">
            <% @pending_tasks.each do |task| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><%= task.title %></span>
                <%= form_with url: task_path(task), method: :put, local: true do %>
                  <%= submit_tag image_tag(asset_path("check_icon.png"), alt: "Completar", class: "icon-btn"), class: "btn btn-success btn-sm" %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
        <div class="card-footer text-right">
          <%= link_to 'Ver tareas completadas', completed_tasks_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>

